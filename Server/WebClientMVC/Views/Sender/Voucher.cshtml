@model WebClientMVC.Models.VoucherModel

@{
    ViewBag.Title = "Voucher";
}

<h2>Voucher</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-12">
        <hr />
        <div class="col-md-6">
            <div class="col-md-offset-0 col-md-12">
                <p>Vouchers are amazing!</p>
                <p>Just type in the code of the voucher that you own and see the magic happen.</p>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Voucher code:</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.code, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class=" col-md-10">
                    <input type="submit" value="Submit" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <img src="~/Resources/voucher.png" style="height:150px"/>
        </div>
    </div>
}
