@model IEnumerable<WebClientMVC.Models.PackageModel>

@{
    ViewBag.Title = "SentPackages";
}

<h2>Your packages</h2>

<p>
    @Html.ActionLink("Create New", "CreatePackage")
</p>
<table class="table">
    <tr>
        <th>
           <label>Barcode</label>
        </th>
        <th>
            <label>Receiver's name</label>
        </th>
        <th>
            <label>Package status</label>
        </th>
        <th>
            <label>Distance</label>
        </th>
        <th>
            <label>Points paid</label>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Barcode)
        </td>
        <td>
            <span>@item.ReceiverFirstName @item.ReceiverLastName</span>
        </td>
        <td>
            @switch (item.StatusID)
            {
                case 1:
                    {
                        <span>You created the request to deliver this package</span>
                        break;
                    }
                case 2:
                    {
                        <span>A courier has picked your package up and it is on it's way</span>
                        break;
                    }
                case 3:
                    {
                        <span>The courier has arrived to the destination and handed the package to the receiver</span>
                        break;
                    }
                case 4:
                    {
                        <span>Oops, something unexpected happened, we don't know anything about your package</span>
                        break;
                    }
            }
        </td>
        <td>
            <span>@item.Distance km</span>
        </td>
        <td>
            <span>@item.Price Points</span>
        </td>
    </tr>
}

</table>
